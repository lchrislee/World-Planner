<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lchrislee.worldplanner">

    <application
        android:name=".WorldPlannerApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.WorldPlannerBaseActivity" />
        <activity android:name=".activities.MasterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ModelDetailActivity"
            android:parentActivityName=".activities.MasterActivity" />

        <provider
            android:name=".utility.WorldPlannerContentProvider"
            android:authorities="com.lchrislee.worldplanner.provider"
            android:enabled="true"
            android:exported="false"/>
    </application>

</manifest>