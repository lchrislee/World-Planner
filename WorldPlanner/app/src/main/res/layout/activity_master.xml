<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lchrislee.worldplanner.activities.MasterActivity">

    <include
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <android.support.design.widget.TabLayout
        android:id="@+id/activity_main_tablayout"
        app:tabMode="fixed"
        app:tabGravity="center"
        app:tabTextColor="@android:color/white"
        app:tabSelectedTextColor="?attr/colorAccent"
        android:background="?attr/colorPrimary"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UnknownIdInLayout" />

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_main_viewpager"
        android:layout_below="@+id/activity_main_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/activity_main_fab_menu"
        fab:menu_colorNormal="?attr/colorAccent"
        fab:menu_openDirection="up"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/activity_main_fab_plot"
            app:fab_colorNormal="?attr/colorPrimary"
            app:fab_label="Plot Point"
            fab:fab_size="mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/activity_main_fab_item"
            fab:fab_colorNormal="?attr/colorPrimary"
            app:fab_label="Item"
            fab:fab_size="mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/activity_main_fab_location"
            fab:fab_colorNormal="?attr/colorPrimary"
            app:fab_label="Location"
            fab:fab_size="mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/activity_main_fab_character"
            fab:fab_colorNormal="?attr/colorPrimary"
            app:fab_label="Character"
            fab:fab_size="mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>
