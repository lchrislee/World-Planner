<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout android:id="@+id/activity_master_drawerlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lchrislee.worldplanner.activities.MasterActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <include
            layout="@layout/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <FrameLayout
            android:id="@+id/activity_master_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UnknownIdInLayout"
            />

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/activity_master_navigationview"
        app:menu="@menu/menu_navigation_world"
        android:background="?attr/colorPrimary"
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        />

</android.support.v4.widget.DrawerLayout>