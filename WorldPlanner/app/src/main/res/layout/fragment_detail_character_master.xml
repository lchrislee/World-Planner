<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.lchrislee.worldplanner.fragments.CharacterDetailFragment"
    >
    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_detail_character_master_viewpager"
        android:layout_above="@+id/fragment_detail_character_master_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <android.support.design.widget.TabLayout
        android:id="@+id/fragment_detail_character_master_tablayout"
        app:tabMode="fixed"
        app:tabGravity="center"
        app:tabTextColor="@android:color/white"
        app:tabSelectedTextColor="?attr/colorAccent"
        android:layout_alignParentBottom="true"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</RelativeLayout>
