<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.lchrislee.worldplanner.fragments.detail.character.physical.CharacterArmDetailFragment"
    >
    <data>
        <variable
            name="character"
            type="com.lchrislee.worldplanner.models.StoryCharacter"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            >

            <TextView
                android:text="@string/fragment_character_left_side"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                >

                <TextView
                    android:text="@string/fragment_character_arm_upper_prompt"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    />

                <EditText
                    android:id="@+id/fragment_character_notes_arm_uleft"
                    android:text="@{character.upperLeftArm ?? null}"
                    android:hint="@string/fragment_character_arm_upper_hint"
                    android:gravity="top"
                    android:maxLines="3"
                    android:minLines="3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:minWidth="280dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                >

                <TextView
                    android:text="@string/fragment_character_arm_lower_prompt"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    />

                <EditText
                    android:id="@+id/fragment_character_notes_arm_lleft"
                    android:text="@{character.lowerLeftArm ?? null}"
                    android:hint="@string/fragment_character_arm_lower_hint"
                    android:gravity="top"
                    android:maxLines="3"
                    android:minLines="3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:minWidth="280dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                >

                <TextView
                    android:text="@string/fragment_character_hand_prompt"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    />

                <EditText
                    android:id="@+id/fragment_character_notes_hand_left"
                    android:text="@{character.handLeft ?? null}"
                    android:hint="@string/fragment_character_hand_hint"
                    android:gravity="top"
                    android:maxLines="3"
                    android:minLines="3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:minWidth="280dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    />

            </LinearLayout>

            <TextView
                android:text="@string/fragment_character_right_side"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                >

                <TextView
                    android:text="@string/fragment_character_arm_upper_prompt"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    />

                <EditText
                    android:id="@+id/fragment_character_notes_arm_uright"
                    android:text="@{character.upperRightArm ?? null}"
                    android:hint="@string/fragment_character_arm_upper_hint"
                    android:gravity="top"
                    android:maxLines="3"
                    android:minLines="3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:minWidth="280dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                >

                <TextView
                    android:text="@string/fragment_character_arm_lower_prompt"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    />

                <EditText
                    android:id="@+id/fragment_character_notes_arm_lright"
                    android:text="@{character.lowerRightArm ?? null}"
                    android:hint="@string/fragment_character_arm_lower_hint"
                    android:gravity="top"
                    android:maxLines="3"
                    android:minLines="3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:minWidth="280dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                >

                <TextView
                    android:text="@string/fragment_character_hand_prompt"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    />

                <EditText
                    android:id="@+id/fragment_character_notes_hand_right"
                    android:text="@{character.handRight ?? null}"
                    android:hint="@string/fragment_character_hand_hint"
                    android:gravity="top"
                    android:maxLines="3"
                    android:minLines="3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:minWidth="280dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</layout>
