<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/list_entity_image"
            android:background="@color/colorAccent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_width="120dp"
            android:layout_height="108dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            />

        <TextView
            android:id="@+id/list_entity_name"
            tools:text="Spiderman"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/list_entity_image"
            android:layout_toRightOf="@+id/list_entity_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="2dp"
            />

        <TextView
            android:id="@+id/list_character_true_name"
            tools:text="Peter Parker"
            android:gravity="center_vertical"
            android:layout_below="@+id/list_entity_name"
            android:layout_toEndOf="@+id/list_entity_image"
            android:layout_toRightOf="@+id/list_entity_image"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            />

        <TextView
            android:id="@+id/list_character_age_gender"
            tools:text="Age 20, Male"
            android:gravity="center_vertical"
            android:layout_below="@+id/list_character_true_name"
            android:layout_toEndOf="@+id/list_entity_image"
            android:layout_toRightOf="@+id/list_entity_image"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            />

        <TextView
            android:id="@+id/list_entity_description"
            tools:text="Main Protagonist"
            android:maxLines="1"
            android:layout_below="@+id/list_character_age_gender"
            android:layout_toEndOf="@+id/list_entity_image"
            android:layout_toRightOf="@+id/list_entity_image"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>