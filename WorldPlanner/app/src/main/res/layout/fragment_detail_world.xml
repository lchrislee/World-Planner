<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lchrislee.worldplanner.fragments.detail.WorldDetailFragment"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/fragment_detail_image"
            android:background="@color/colorImageBackground"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_detail_image"
            android:layout_marginBottom="4dp"
            />

        <EditText
            android:id="@+id/fragment_detail_name"
            tools:text="Earth - 616"
            android:hint="Untitled world"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            />

        <EditText
            android:id="@+id/fragment_detail_description"
            tools:text="The main Earth in the Marvel universe. This world is home to mutants, technological geniuses, and even alien lifeforms. No two days are the same for true believers."
            android:hint="Fill in these details to get started."
            android:inputType="textMultiLine"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            />

        <RelativeLayout
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fragment_detail_world_plot_prompt"
                android:text="Major Events"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_toStartOf="@+id/fragment_detail_world_plot_add"
                android:layout_toLeftOf="@+id/fragment_detail_world_plot_add"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/fragment_detail_world_plot_add"
                android:src="@android:drawable/ic_menu_add"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_alignBottom="@+id/fragment_detail_world_plot_prompt"
                android:layout_alignTop="@+id/fragment_detail_world_plot_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_detail_world_plots"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            tools:listitem="@layout/list_event"
            />

    </LinearLayout>
</ScrollView>