<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_list_entity_small"
    android:orientation="vertical"
    android:layout_width="@dimen/world_entity_card_width"
    android:layout_height="@dimen/world_entity_card_height">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/spacing_x1"
        app:cardElevation="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/spacing_x0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >

        <ImageView
            android:id="@+id/list_entity_image"
            tools:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/list_entity_name"
        tools:text="@string/app_title"
        style="@style/base_textview"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>