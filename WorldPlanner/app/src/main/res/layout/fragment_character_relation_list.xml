<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="com.lchrislee.worldplanner.fragments.CharacterRelationListFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_character_relation_recyclerview"
        tools:listitem="@layout/list_character_relation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fragment_character_relation_add"
        fab:fab_colorNormal="?attr/colorAccent"
        android:src="@drawable/fab_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
